<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccc"
    android:orientation="vertical" >
    <RelativeLayout 
        android:id="@+id/l1"
        android:gravity="center_vertical"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的淘宝"
            android:layout_weight="1"
            android:textSize="20sp"
            android:padding="10dp"
            />
		<LinearLayout 
		    android:gravity="center_vertical"
		    android:layout_alignParentRight="true"
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:orientation="horizontal">
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:paddingRight="0dp"
            android:layout_weight="13"
            android:text="编辑"
            android:gravity="right"
            android:textColor="#ff0000"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:background="@drawable/tb_icon_more_msg_56" />
        </LinearLayout>
    </RelativeLayout>
	<ScrollView
    android:id="@+id/scrollview" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f60"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:src="@drawable/tao_user_2" />

        <LinearLayout
            android:id="@+id/l2_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_marginLeft="-5dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:text="恋上猫女衣坊"
                android:textColor="#ffffff" />

            <LinearLayout
                android:id="@+id/l2_1_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/user_1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/user_2" />
            </LinearLayout>
        </LinearLayout>
        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="right|center_vertical"
        android:layout_marginLeft="75dp"
        android:src="@drawable/arrow_expend_right" />
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/l3"
        android:background="#f30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout 
            android:id="@+id/l3_1"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="180"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="收藏的宝贝"/>
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/l3_2"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="28"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="收藏的店铺"/>
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/l3_3"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="58"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="我的足迹"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/l4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">
       <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的订单"
            android:layout_weight="1"
            android:textSize="16sp"
            android:padding="10dp"/>

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:paddingRight="0dp"
            android:layout_weight="13"
            android:text="查看全部已购宝贝"
            android:gravity="right"
            android:textColor="#999"
            android:textSize="10sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:background="@drawable/tb_icon_more_msg_56" /> 
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/l5"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">
            <ImageView 
                android:layout_weight="1"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user_3"/>
            <ImageView 
                android:layout_weight="1"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user_4"/>
            <ImageView 
                android:layout_weight="1"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user_5"/>
            <ImageView
                android:layout_weight="1" 
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user_6"/>
            <ImageView 
                android:layout_weight="1"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user_7"/>
      </LinearLayout>
      <LinearLayout 
          android:id="@+id/l6"
          android:background="#ffffff"
          android:layout_marginTop="6dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的卡卷包"
            android:layout_weight="1"
            android:textSize="20sp"
            android:padding="10dp"/>

         <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:paddingRight="0dp"
            android:layout_weight="13"/>
          
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="0.1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/arrow_expend_right" />
      </LinearLayout>
       <LinearLayout 
          android:id="@+id/l7"
          android:background="#ffffff"
          android:layout_marginTop="1dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <ImageView 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="10dp"
              android:src="@drawable/user_8"/>"

         <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:text="生活卷"
            android:textSize="13sp"
            android:layout_weight="13"/>
          
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="0.005"
            android:layout_marginLeft="5dp"
             android:layout_marginRight="10dp"
            android:background="@drawable/arrow_expend_right" />
      </LinearLayout>
       <LinearLayout 
          android:id="@+id/l8"
          android:background="#ffffff"
          android:layout_marginTop="1dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <ImageView 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="10dp"
              android:src="@drawable/user_9"/>

         <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
             android:layout_gravity="center_vertical"
            android:text="网店卷"
            android:textSize="13sp"
            android:layout_weight="13"/>
         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_vertical"
             android:textColor="#999"
             android:textSize="10sp"
             android:text="暂无可用优惠卷"/>
          
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="0.01"
            android:layout_marginLeft="5dp"
             android:layout_marginRight="10dp"
            android:background="@drawable/arrow_expend_right" />
      </LinearLayout>
       <LinearLayout 
          android:id="@+id/l9"
          android:background="#ffffff"
          android:layout_marginTop="1dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
           <ImageView 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="10dp"
              android:src="@drawable/user_10"/>

         <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
             android:layout_gravity="center_vertical"
            android:text="会员卡"
            android:textSize="13sp"
            android:layout_weight="13"/>
         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_vertical"
             android:textColor="#999"
             android:textSize="10sp"
             android:text="一卡在手，逛店无忧"/>
          
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="0.01"
            android:layout_marginLeft="5dp"
             android:layout_marginRight="10dp"
            android:background="@drawable/arrow_expend_right" />
      </LinearLayout>
      <LinearLayout 
          android:id="@+id/l10"
          android:background="#ffffff"
          android:layout_marginTop="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的专享特权"
            android:layout_weight="1"
            android:textSize="20sp"
            android:padding="10dp"/>

        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:textColor="#999"
            android:textSize="10sp"
            android:text="领金币，看优惠"
            android:layout_weight="0.05"/>
          
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="0.001"
            android:layout_marginLeft="5dp"
             android:layout_marginRight="10dp"
            android:background="@drawable/arrow_expend_right" />
      </LinearLayout>
      <LinearLayout 
          android:id="@+id/l11"
          android:background="#ffffff"
          android:layout_marginTop="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <TextView 
            android:id="@+id/thinking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开发感言"
            android:layout_weight="1"
            android:textSize="20sp"
            android:padding="10dp"/>

        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
          
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            
            android:layout_weight="0.001"
            android:background="@drawable/arrow_expend_right" />
      </LinearLayout>
      <TextView 
          android:background="#ffffff"
          android:layout_width="match_parent"
          android:layout_height="500dp"/>
      </LinearLayout>
      </ScrollView>
</LinearLayout>
