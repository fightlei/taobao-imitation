<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent" >
    <RelativeLayout
        android:id="@+id/rl_one"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="left"
        android:background="#ffffff" >
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="确认订单"
            android:textColor="#000000"
            android:textSize="25sp" />
    </RelativeLayout>
    <ImageView
        android:layout_below="@id/rl_one"
        android:id="@+id/iv_one"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c0c6c9" />
<ScrollView 
    android:layout_below="@id/iv_one"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="我爱土豪金"
            android:gravity="center_vertical"
            />
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c0c6c9" />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView 
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/detail_show_1"/>
            <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView 
                android:layout_marginLeft="10dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="时尚女衣  尽在恋上猫女衣坊  地址 ： http://yecoly.taobao.com"/>
            <TextView 
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#e5e4e6"
                android:text="颜色和类型"/>
        </LinearLayout>
        <LinearLayout 
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="￥2999.0"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="X1"/>
        </LinearLayout>
            
        </LinearLayout>
         <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c0c6c9" />
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView 
                android:id="@+id/peisong"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="配送方式"
            android:gravity="center_vertical"
            />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

            <TextView 
                android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="快递  免邮"
            android:textColor="#e5e4e6"
            android:gravity="center_vertical"
            />
            <ImageView 
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_expend_right"/>
            </LinearLayout>
        </RelativeLayout>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c0c6c9" />
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView 
                android:id="@+id/yunfeixian"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="运费险"
            android:gravity="center"
            />
            <ImageView 
                android:layout_alignBottom="@id/yunfeixian"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/arrow_expend_right"/>

        </RelativeLayout>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c0c6c9" />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText 
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="给卖家留言"/>
            <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">
            	<TextView 
            	    android:layout_width="wrap_content"
            	    android:layout_height="50dp"
            	    android:gravity="center"
            	    android:text="共一件商品"/>
            	<TextView 
            	    android:gravity="center"
            	    android:textSize="20sp"
            	    android:layout_marginLeft="20dp"
            	    android:layout_width="wrap_content"
            	    android:layout_height="50dp"
            	    android:text="合计 ： ￥2999.0"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e5e4e6"
            android:orientation="vertical">
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView 
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="使用100淘金币抵用1.00元"
                    android:gravity="center"/>
                <CheckBox 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c0c6c9" />
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView 
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="匿名购买"
                    android:gravity="center"/>
                <CheckBox 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:gravity="right"
    android:orientation="horizontal">
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff0000"
        android:layout_marginRight="10dp"
        android:text="合计 ： ￥2999.0"/>
    <Button 
        android:id="@+id/btn_confirm"
        android:layout_marginBottom="5dp"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:textColor="#ffffff"
        android:text="确认"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:background="#ff0000"/>
</LinearLayout>
</RelativeLayout>