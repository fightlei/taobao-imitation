<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
 <LinearLayout
     android:id="@+id/ll1" 
     android:background="#f60"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
     <ImageView
         android:id="@+id/back" 
         android:padding="10dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/tb_icon_actionbar_back"/>
     <TextView 
         android:layout_width="220dp"
         android:layout_height="match_parent"
         android:gravity="center_vertical|center_horizontal"
         android:textSize="25sp"
         android:textColor="#000000"
         android:text="意见反馈"/>
 </LinearLayout>
 <LinearLayout 
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:padding="10dp"
     android:orientation="vertical">
     <TextView 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="10dp"
         android:textColor="#000000"
         android:text="感言："
         android:textSize="25sp"/>
     <TextView 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
         android:textColor="#000000"
         android:text="      至此，仿淘宝项目基本完成，过程中也遇到了不少困难，总结出以下几点："/>
     <TextView 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
         android:textColor="#000000"
         android:text="      1:图片的查看，不仅需要左右滑动还需要能放大缩小，该功能在宝贝详情中体现"/>
     <TextView 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
         android:textColor="#000000"
         android:text="      2:Fragment与Activity之间的信息传递，该功能在购物车点击去逛逛跳转到首页中体现"/>
     <TextView 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
         android:textColor="#000000"
         android:text="      3:Arraylist中数据的多项删除，使用倒序删除法，该功能在购物车删除功能中体现"/>
     <TextView 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
         android:textColor="#000000"
         android:text="      4:在购物车中出现的checkbox选择后串行问题，使用ScrollView嵌套ListView方法解决，该功能在购物车中体现"/>
     <TextView 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
         android:textColor="#000000"
         android:text="      希望结识更多的朋友，一起学习，一起进步，本人联系方式：QQ：717541397，同时，欢迎大家去我的淘宝店逛逛"/>
     <TextView 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
         android:background="#6ff"
         android:textColor="#000000"
         android:textSize="20sp"
         android:text="      (恋上猫女衣坊,http//yecaoly.taobao.com),点我去看看"/>
 </LinearLayout>
</LinearLayout>
