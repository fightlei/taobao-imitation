<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout 
        android:background="#ff5000"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        
        >
        <ImageButton 
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:id="@+id/scanf"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/menu_top_left"/>
        <TextView 
            android:id="@+id/textview_search"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/scanf"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:text="搜索宝贝-店铺"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/message"
            android:background="@drawable/bg_menu_edit"/>
        <ImageButton 
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:id="@+id/message"
            android:layout_alignParentRight="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/menu_top_right"/>
    </RelativeLayout>
    <ListView 
        android:dividerHeight="20dp"
        android:id="@+id/listView_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
    

</LinearLayout>