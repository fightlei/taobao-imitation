<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#e3e4e5" >

        <ImageButton
            android:layout_weight="1"
            android:id="@+id/actionbar_back_search"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/tb_icon_actionbar_back" />

        <EditText
            android:text="    "
            android:layout_weight="20"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_ware"/>

        <ImageButton
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="@drawable/tb_icon_actionbar_more" />
    </LinearLayout>
    <ListView 
        android:divider="#000000"
        android:dividerHeight="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView_search"></ListView>

</LinearLayout>